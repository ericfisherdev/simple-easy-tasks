# Simple Easy Tasks Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
SERVER_PORT=8080
GIN_MODE=release
LOG_LEVEL=info
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=http://pocketbase:8090
PB_PORT=8090
PB_ADMIN_EMAIL=admin@localhost
PB_ADMIN_PASSWORD=changeme123

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-with-at-least-32-characters
PASSWORD_RESET_SECRET=your-super-secret-password-reset-key-with-at-least-32-characters
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=168h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Docker Configuration
APP_PORT=8080
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Build Arguments
VERSION=dev
BUILD_TIME=
COMMIT_HASH=

# Timeouts
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s
CONNECTION_TIMEOUT=30s

# Database Connection Pool
MAX_CONNECTIONS=25

# Logging
LOG_FORMAT=json
LOG_OUTPUT=stdout